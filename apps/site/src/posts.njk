---
layout: layout.njk
title: Posts
---

<h1 class="text-3xl font-semibold mb-6">Latest Posts</h1>

{% set posts = collections.all | reverse %}
<ul class="space-y-6 mt-4">
  {% for post in posts %}
    {% if post.url and post.url.startsWith('/posts/') and post.data.layout == 'post.njk' %}
    <li class="card">
      <h2 class="text-xl font-semibold"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      {% if post.date %}
      <p class="text-sm opacity-70">{{ post.date | date("yyyy-LL-dd") }}</p>
      {% endif %}
      {% set tags = post.data.tags %}
      {% include "components/tag-pills.njk" %}
    </li>
    {% endif %}
  {% endfor %}
</ul>
