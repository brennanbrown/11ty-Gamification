---
layout: layout.njk
pagination:
  data: collections.tagsList
  size: 1
  alias: tagItem
permalink: "/tags/{{ tagItem.tag }}/index.html"
title: "#{{ tagItem.tag }}"
---

<h1 class="text-3xl font-semibold mb-6">#{{ tagItem.tag }}</h1>
<p class="opacity-70 mb-4">{{ tagItem.count }} post{% if tagItem.count != 1 %}s{% endif %}</p>

<ul class="space-y-6">
  {% set posts = collections.tagMap[tagItem.tag] %}
  {% for post in posts %}
  <li class="card">
    <h2 class="text-xl font-semibold"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    {% if post.date %}
    <p class="text-sm opacity-70">{{ post.date | date("yyyy-LL-dd") }}</p>
    {% endif %}
    {% set tags = post.data.tags %}
    {% include "components/tag-pills.njk" %}
  </li>
  {% endfor %}
</ul>
